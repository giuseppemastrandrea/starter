<!DOCTYPE html>
<html>
	<head>
		<title>
			{% block page_title %}
				{{ page_title }}
			{% endblock page_title %}
		</title>
		{% block css %}	
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
		{% endblock css %}

		{% block meta_tags %}
		{% endblock meta_tags %}
	</head>
	<body>
		{% block pre_body %}
		{% endblock pre_body %}
		
		{% block header %}
			<header>
				<nav>
					<ul>
						{% for voce in menu %}
							<li>
								<a href="{{ voce.href }}">{{ voce.text }}</a>
							</li>
						{% endfor %}
					</ul>
				</nav>
			</header>
		{% endblock header %}

		{% block page_content %}
		{% endblock page_content %}

		{% block post_body %}
		{% endblock post_body %}

		{% block scripts %}
		{% endblock scripts %}
	</body>
</html>